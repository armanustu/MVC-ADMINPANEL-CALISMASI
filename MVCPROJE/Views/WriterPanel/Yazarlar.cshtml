@model IEnumerable<EntityLayer.Concrete.Writer>
@{
    ViewBag.Title = "Yazarlar";
    Layout = "~/Views/Shared/_WriterPanel.cshtml";
}

<body class="hold-transition sidebar-mini">
    <section class="content">
        <h1>Yazarlar</h1>
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    @item.WriterTitle
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b>@item.WriterName @item.WriterSurname</b></h2>
                                            <p class="text-muted text-sm"><b>About: </b>@item.WriterAbout </p>
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span>  mail Adres @item.WriterMail</li>
                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="~/Content/images/@item.WriterImage" alt="" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="/WriterPanel/Index" class="btn btn-sm bg-teal">
                                            <i class="fas fa-comments">Yazar Başlıkları</i>
                                        </a>
                                        <a href="/WriterPanel/WriterUpdate/@item.WriterID" class="btn btn-sm btn-primary">
                                            <i class="fas fa-user"></i> Profili Görüntüle
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
            <!-- /.card-body -->
            <!-- /.card-footer -->
        </div>

    </section>

</body>

