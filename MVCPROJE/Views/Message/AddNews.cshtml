@model EntityLayer.Concrete.Message
@{
    ViewBag.Title = "AddNews";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Compose Message</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1"> 
    <link rel="stylesheet" href="@Url.Content("~/MvcProjeKampiTema-main/MvcProjeKampiTema-main/Mvc Proje Kampı Tema/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css")">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="@Url.Content("~/MvcProjeKampiTema-main/MvcProjeKampiTema-main/Mvc Proje Kampı Tema/AdminLTE-3.0.4/dist/css/adminlte.css")">
    <link rel="stylesheet" href="@Url.Content("~/MvcProjeKampiTema-main/MvcProjeKampiTema-main/Mvc Proje Kampı Tema/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.css")">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <link href="" rel="stylesheet" />
</head>
<body class="hold-transition sidebar-mini">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                
                
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">               
                    @Html.Action("MessageListMenu", "Contact")
                <div class="col-md-9">
                    @using (Html.BeginForm("AddNews", "Message", FormMethod.Post))
                    {
                        <div class="card card-primary card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">                                
                                Konu
                                <div class="form-group">
                                    @Html.Label("Alıcı mail Giriniz")
                                    @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.ReceiverMail)
                                </div>
                                <div class="form-group">
                                    @Html.Label("Konu Giriniz")
                                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Subject)
                                </div>
                                <div class="form-group">
                                    @Html.Label("Mesajınızı Giriniz")
                                    <textarea id="compose-textarea" name="MessageContent" class="form-control" style="height: 300px">

                                                            </textarea>
                                </div>
                                <div class="form-group">
                                    <div class="btn btn-default btn-file">
                                        <i class="fas fa-paperclip"></i> Attachment
                                        <input type="file" name="attachment">
                                    </div>
                                    <p class="help-block">Max. 32MB</p>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <div class="float-right">
                                    <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Draft</button>
                                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Send</button>
                                </div>
                                <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Discard</button>
                            </div>
                            
                            <!-- /.card-footer -->
                        </div>

                    }
                </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        
    </section>
    <!-- /.content -->
    <!-- /.content-wrapper -->
    <!-- Control Sidebar -->
    <!-- /.control-sidebar -->
    <!-- ./wrapper -->
    <!-- jQuery -->
    
    <script src="@Url.Content("~/MvcProjeKampiTema-main/MvcProjeKampiTema-main/Mvc Proje Kampı Tema/AdminLTE-3.0.4/plugins/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/MvcProjeKampiTema-main/MvcProjeKampiTema-main/Mvc Proje Kampı Tema/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/MvcProjeKampiTema-main/MvcProjeKampiTema-main/Mvc Proje Kampı Tema/AdminLTE-3.0.4/dist/js/adminlte.min.js")"></script>
    <script src="@Url.Content("~/MvcProjeKampiTema-main/MvcProjeKampiTema-main/Mvc Proje Kampı Tema/AdminLTE-3.0.4/dist/js/demo.js")"></script>
    <script src="@Url.Content("~/MvcProjeKampiTema-main/MvcProjeKampiTema-main/Mvc Proje Kampı Tema/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.js")"></script>
    <script>
        $(function () {
            //Add text editor
            $('#compose-textarea').summernote();
        })</script>
</body>
</html>


